<!DOCTYPE html>
<html>
  <head>
    <link rel="stylesheet" href="/stylesheets/table.css">
    <% include ../partials/head %>
  </head>
  <body>
    <div align="center">
    <header>
      <% include ../partials/header %>
    </header>
    <div class="posts">
      <% include partials/top%>
      <image src="/images/banner_main.png">
      <!-- main start -->
      <div class="edit">
      <table class="table">
        <thead>
          <tr>
            <th>Edit Post</th>
            <th>insert...</th>
          </tr>
        </thead>
        <tbody>
          <form class="posts_form" action="/posts/<%=data._id%>?_method=put" method="post">
          <tr>
            <th>TITLE</th>
            <td><input type="text" name="post[title]" value="<%=data.title%>"></td>
          </tr>
          <tr>
            <th>DATA</th>
            <td><textarea name="post[body]"><%=data.body%></textarea></td>
          </tr>
          <tr>
            <td><button type="submit">Submit</button></td>
          </form>
            <td><a href="/posts/<%=data._id%>"><button>Back</button></td>
          </tr>
        </tbody>
      </table>
      </div>
      <!-- main end -->
    </div> <!-- posts end -->
    <footer>
      <% include ../partials/footer %>
    </footer>
  </div>
  </body>
</html>
