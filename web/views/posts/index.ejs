            <% data.forEach(function(e){ %>
              <tr>
                <th>
                  <a href="/posts/<%=e._id %>"> <%= e.title %></a>
                </th>
                <td>
                  <%= e.createdAt.toLocaleDateString() %>
                </td>
              </tr>
            <% }) %>
            <!-- new button -->
            <tr>
              <td>
              </td>
              <td align="right">
                <a href="/posts/setting"><button>Setting</button></a>
